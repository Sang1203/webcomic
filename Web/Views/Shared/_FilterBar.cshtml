<div class="tab bg-main">
    <h3>Thể loại</h3>
    <div class="form-search max-h-370">
        <div class="part-type">

            @foreach (category category in ViewBag.Data)
            {
                <label class="check">
                    @category.NameCategory
                    <input type="checkbox" name="category" value="@category.CategoryId" data-check="0">
                    <span></span>
                </label>
            }
        </div>

    </div>

    <span class="more">Xem tất cả</span>

</div>

<div class="tab bg-main">

    <h3>Tình trạng</h3>
    <div class="form-search">
        <select class="form-control" name="status" id="">
            <option value="0">Tất cả</option>
            @foreach (status_comic stcm in ViewBag.Status)
            {
                <option value="@stcm.StatusComicId">@stcm.StatusComicName</option>
            }
        </select>
    </div>

</div>


<div class="tab bg-main">

    <h3>Tên tác giả</h3>
    <div class="form-search">
        <input type="text" class="form-control" name="author" placeholder="Tên tác giả">
    </div>

</div>

<div class="tab bg-main">

    <h3>Quốc gia</h3>
    <div class="form-search">
        <select class="form-control" name="nation" id="">
            <option value="0">Tất cả</option>
            @foreach (nation stcm in ViewBag.Nation)
            {
                <option value="@stcm.NationId">@stcm.NameNation</option>
            }
        </select>
    </div>

</div>