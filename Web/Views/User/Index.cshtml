@{
    Layout = "~/Views/Shared/_User.cshtml";
}

<div class="profile ">

    <div class="row ">
        <div class="col-md-4 col-12">
            <div class="cover bg-main">
                <div class="profile-avatar">
                    <img src="" alt="">
                </div>
            </div>

        </div>

        <div class="col-md-8 col-12">
            <div class="cover bg-main">
                <form action="" method="post">
                    <div class="form-group row">
                        <label for="input_email" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input id="input_email" type="email" name="email" placeholder="Email" disabled="disabled" class="form-control">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="input_name" class="col-sm-2 col-form-label">Tên</label>
                        <div class="col-sm-10">
                            <input id="input_name" type="text" name="username" placeholder="Email" disabled="disabled" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn float-right">Lưu</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>