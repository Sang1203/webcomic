                <li class="nav-item ">
                    <a class="nav-link" href="@Url.Action("Index", "Category")">Đăng nhập</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="@Url.Action("Index", "Category")">Đăng ký</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0" action="">
                <input class="form-control ip-search" type="search" placeholder="Nhập tên chuyện ">
                <button class="btn btn-white my-2" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
    </div>
</nav>